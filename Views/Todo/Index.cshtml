@model List<TWTodos.Models.ToDo>

<h1>@ViewData["Title"]</h1>
@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
            <th scope="col">#</th>
            <th scope="col">Título</th>
            <th scope="col">Criado em</th>
            <th scope="col">Data de entrega</th>
            <th scope="col">Finalizado em</th>
            <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (TWTodos.Models.ToDo todo in Model)
            {
                <tr>
                    <td>@todo.Id</td>
                    <td>@todo.Title</td>
                    <td>@todo.CreatedAt</td>
                    <td>@todo.Deadline</td>
                    <td> 
                        @(todo.FinishedAt.HasValue ? todo.FinishedAt : "-")
                    </td>
                    <td>
                        <a 
                            asp-controller="Todo"
                            asp-action="Finish"
                            asp-route-id="@todo.Id"
                            class = "btn btn-success btn-sm @(todo.FinishedAt.HasValue ? "disabled" : "")"
                            >
                            Concluir
                        </a>
                    </td>
                    <td>
                        <a 
                            asp-controller="ToDo" 
                            asp-action="Edit" 
                            asp-route-id="@todo.Id" 
                            class = "btn btn-warning btn-sm @(todo.FinishedAt.HasValue ? "disabled" : "")"
                            >
                            Editar
                        </a>
                                    
                    </td>
                    <td>
                        <a 
                            asp-controller="todo"
                            asp-action="Delete"
                            asp-route-id="@todo.Id"
                            class = "btn btn-danger btn-sm"
                            >
                            Excluir
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else 
{
    <p>Nenhuma Tarefa Cadastrada</p>
}


<a asp-controller="Todo" asp-action="Create" class = "btn btn-primary">Nova Tarefa</a>

